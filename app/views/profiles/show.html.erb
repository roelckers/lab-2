<div class="container mt-5">
  <h1><%= @user.name || @user.email %></h1>

  <h3>Posts de <%= @user.name || @user.email %>:</h3>
  <% @posts.each do |post| %>
    <div class="post mb-3">
      <p><%= link_to post.content, post_path(post) %></p>
      <small>Publicado el <%= post.created_at.strftime("%d %B %Y") %></small>
    </div>
  <% end %>
</div>
